<Button>
    font_size: 40

<GameScreen>

    GridLayout:
        size: root.width - 200, root.height - 200
        pos: 100, 100
        cols: 1

        GridLayout:
            cols: 3

            btn_1: btn_1
            btn_2: btn_2
            btn_3: btn_3
            btn_4: btn_4
            btn_5: btn_5
            btn_6: btn_6
            btn_7: btn_7
            btn_8: btn_8
            btn_9: btn_9

            Button:
                id: btn_1
                text: '1'
                background_down: root.DefaultImage() if btn_1.state == 'normal' else root.ChangeImage(btn_1)
                on_release:
                    root.Down(btn_1)
                    root.Pressed(btn_1)
                    root.Winning_Conditions()
                multiline: False

