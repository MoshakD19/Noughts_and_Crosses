<P1>:
    close: close

    Label:
        text: root.winner +  ' win.'
        size_hint: 0.6, 0.2
        pos_hint: {"x":0.2, "top":1}

    Button:
        id: close
        font_size: 20
        text: "Quit"
        size_hint: 0.8, 0.2
        pos_hint: {"x":0.1, "y":0.1}
        on_release:
            app.stop()

